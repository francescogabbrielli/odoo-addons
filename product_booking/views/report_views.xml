<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="report_bookings">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="row bg-primary">
                    <div class="col-2">Nr</div>
                    <div class="col-2">Data</div>
                    <div class="col-3">Cliente</div>
                    <div class="col-3">Evento</div>
                    <div class="col-2">Totale</div>
                </div>
                <t t-foreach="docs" t-as="o">
                    <div class="row">
                        <div class="col-2"><span t-field="o.code"/></div>
                        <div class="col-2"><span t-field="o.date" t-options="{'widget': 'date'}"/></div>
                        <div class="col-3"><span t-field="o.customer" t-options="{'widget': 'contact'}"/></div>
                        <div class="col-3"><span t-field="o.event.title" /></div>
                        <div class="col-2 text-right"><span t-field="o.total"/></div>
                    </div>
                </t>
                <div class="row">
                    <div class="col-12"><hr/></div>
                    <div class="col-10 text-right"><b>Totale complessivo:</b></div>
                    <div class="col-2 text-right"><b><t t-esc="sum([x.total for x in docs])"/></b></div>
                </div>
            </t>
        </t>
    </template>

</odoo>